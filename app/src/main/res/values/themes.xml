<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">

        <item name="colorPrimary">@color/toolBarGeneral</item>
        <item name="colorPrimaryVariant">@color/statusBarGeneral</item>
        <item name="colorSecondary">@color/accentGeneral</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:fontFamily">@font/caveat_brush</item>

    </style>


    <style name="AppTheme.styleGeneral">

    </style>

    <style name="AppTheme.styleLogin"  parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/toolBarLogin</item>
        <item name="colorPrimaryVariant">@color/statusBarLogin</item>
        <item name="colorAccent">@color/accentLogin</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>

    <style name="AppTheme.styleRegister" >
        <item name="colorPrimary">@color/toolBarRegister</item>
        <item name="colorPrimaryVariant">@color/statusBarResgister</item>
        <item name="colorAccent">@color/accentRegister</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:fontFamily">@font/zeyada</item>
    </style>



    <style name="TextViewTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewSubTitle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="FontStyle">
        <item name="android:fontFamily">@font/caveat_brush</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FontStyle.Title">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="FontStyleButton" parent="FontStyle">
        <item name="android:textSize">22sp</item>
    </style>

    <style name="FontColor">"@color/white"</style>
</resources>